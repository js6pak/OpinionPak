{
  "$schema": "https://json.schemastore.org/template",
  "author": "js6pak",
  "classifications": [
    "Common",
    "Console"
  ],
  "name": "OpinionPak: Console App",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "Console application template for OpinionPak",
  "groupIdentity": "OpinionPak.Templates.Console",
  "identity": "OpinionPak.Templates.Console.CSharp",
  "shortName": "op-console",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Company.ConsoleApplication1",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "datatype": "string",
      "description": "The target framework for the project.",
      "replaces": "LATEST_FRAMEWORK",
      "defaultValue": "@LATEST_FRAMEWORK@",
      "displayName": "Framework"
    },
    "SkipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false",
      "displayName": "Skip restore"
    },
    "HostIdentifier": {
      "type": "bind",
      "binding": "host:HostIdentifier"
    }
  },
  "primaryOutputs": [
    {
      "path": "Company.ConsoleApplication1.csproj"
    },
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "path": "Program.cs"
    }
  ],
  "defaultName": "ConsoleApp1",
  "postActions": [
    {
      "id": "restore",
      "condition": "(!SkipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "id": "open-file",
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "description": "Opens Program.cs in the editor",
      "manualInstructions": [],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "1"
      },
      "continueOnError": true
    }
  ]
}
